{% extends 'layouts/base.twig' %}

{% block content %}
  <section class="searchResults container">
    {% for post in posts %}
      <div class="row">
        <article class="searchResults__result col-lg-6 mb-4">
          <time>{{ post.date }}</time>
          <h2><a href="{{ post.link }}">{{post.title}}</a></h2>
          <p>{{post.preview.length(20).read_more('')}}</p>
        </article>
      </div>
      {% endfor %}
  </section>
{% endblock %}