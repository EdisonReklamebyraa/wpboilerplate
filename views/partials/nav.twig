<ul class="navigationList">
  {# mainNav er globalt satt i inc/add_twig_nav.php #}
  {% for item in mainNav.items %}
  <li class="navigationList__item {{ item.classes|join(' ') }}">
    <a class="navigationList__link" href="{{ item.link }}">{{ item.title }}</a>
    {% if item.children %}
    <ul class="navigationList navigationList--submenu">
      {% for child in item.children %}
      <li class="navigationList__item navigationList__item--child">
        <a class="navigationList__link" href="{{ child.link }}">{{ child.title }}</a>
      </li>
      {% endfor %}
    </ul>
    {% endif %}
  </li>
  {% endfor %}
  <li class="search">
      {% include "partials/searchform.twig" %}
  </li>
</ul>