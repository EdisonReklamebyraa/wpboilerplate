{# Example markup #}
<nav class="headerMenu">
  <ul class="nav-main">
    {% for item in mainNav.items %}
    <li class="nav-main-item {{ item.classes|join(' ') }}">
      <a class="nav-main-link" href="{{ item.link }}">{{ item.title }}</a>
      {% if item.children %}
      <ul class="nav-drop">
        {% for child in item.children %}
        <li class="nav-drop-item">
          <a class="menypunkt" href="{{ child.link }}">{{ child.title }}</a>
        </li>
        {% endfor %}
      </ul>
      {% endif %}
    </li>
    {% endfor %}
  </ul>
</nav>

